{
  "name": "@hanakla/arma",
  "version": "0.5.2",
  "description": "Single killer functions of Web frontend",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:hanakla/arma.git",
  "author": "Hanakla <hanakla.dev@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react-hooks": {
      "types": "./dist/react-hooks.d.ts",
      "import": "./dist/react-hooks.mjs",
      "require": "./dist/react-hooks.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:copy-files": " mkdir -p dist && cp package.json ./dist/ && cp ../../README.md ./dist/",
    "build:publish": "yarn clean:dist && yarn build:copy-files && yarn build",
    "clean:dist": "rm -rf dist",
    "prepublishOnly": "yarn build:publish"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "immer": "^10.1.1",
    "react": "^19.1.0",
    "typescript": "^5.8.3",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "immer": "^10.1.1",
    "react": "^19.1.0"
  },
  "dependencies": {
    "@hanakla/rescue": "^1.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write",
      "git add"
    ]
  }
}
